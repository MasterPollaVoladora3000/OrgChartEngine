<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Edit User in @ViewBag.Rol</h4>
    </div>
    <div class="modal-body">

        <div class="form-group row">
            <label class="col-md-4 control-label">User</label>
            <div class="col-md-8">
                @Html.DropDownList("User", null, new { @class = "form-control selectpicker", @id = "dd_user", @title = "Select Users",  @required = "required" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-4 control-label">Shift</label>
            <div class="col-md-8">
                @Html.DropDownList("Shift", null, new { @class = "form-control selectpicker", @id = "dd_shift", @title = "Select Shift", @required = "required" })
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" id="btnSave" onclick="editUser(id_positionUser=@ViewBag.IdPositionUser,id_position = @ViewBag.IdPosition, idrol = @ViewBag.IdRol)" class="btn buttonSave">Save</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
</div>

<script type="text/javascript">
    $('.selectpicker').selectpicker();

  
</script>
